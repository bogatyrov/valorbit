#!/bin/sh

set -e

umask 077

basedir=~/.valorcoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/valorcoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Valorcoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/valorcoin/valorcoin-qt "$@"
